# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://family_user:family_secret_pw@postgres:5432/family_threads

# JWT Authentication
# Access token secret (used to sign short-lived access tokens)
JWT_SECRET=your-jwt-secret-here-change-this-in-production

# Refresh token secret (used to sign long-lived refresh tokens)
JWT_REFRESH_SECRET=your-refresh-secret-here-change-this-in-production

# Access token expiration time (e.g., 1h, 15m)
JWT_EXPIRATION=1h

# Refresh token expiration time (e.g., 7d, 30d)
JWT_REFRESH_EXPIRATION=7d

# File Upload Configuration
# Directory where uploaded files are stored (bind mount to /volume1/docker/kimitter/uploads)
UPLOAD_DIR=./uploads

# Maximum file size in bytes (100MB = 104857600)
MAX_FILE_SIZE=104857600

# Expo Push Notifications
# Expo access token for sending push notifications to mobile clients
EXPO_ACCESS_TOKEN=your-expo-access-token-here

# SMTP Configuration (Email)
# SMTP server hostname for sending emails
SMTP_HOST=your-smtp-host-here

# SMTP server port (typically 587 for TLS, 465 for SSL)
SMTP_PORT=587

# Use TLS encryption (true for port 587, false for port 25)
SMTP_SECURE=false

# SMTP authentication username
SMTP_USER=your-smtp-username-here

# SMTP authentication password
SMTP_PASS=your-smtp-password-here

# Email sender address and display name
SMTP_FROM=Kimitter <noreply@kimitter.app>
